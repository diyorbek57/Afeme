<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AreaAndLotFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/status"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_post_status_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/status"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/area"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_post_area_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/area"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/year_build"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_post_year_build_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/year_build"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/floor"
                android:textColor="@color/dark_grayish_blue"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_post_floor_features"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginVertical="10dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/floor"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>