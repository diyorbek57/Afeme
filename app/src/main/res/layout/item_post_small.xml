<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_margin="9dp"
    app:cardCornerRadius="25dp">

    <RelativeLayout
        android:id="@+id/rl_post_small"
        android:layout_width="200dp"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_image_post_small"
            android:layout_width="match_parent"
            android:layout_height="140dp">


            <ImageView
                android:id="@+id/iv_image_post_small"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/house_1" />
            <ImageView
                android:id="@+id/iv_heart_anim"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:alpha="0"
                app:srcCompat="@drawable/avd_instagram_like" />
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="10dp"
                app:cardBackgroundColor="#D7FFFFFF"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="9dp"
                    android:paddingVertical="3dp">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_yellow_star_full" />

                    <TextView
                        android:id="@+id/tv_rating_post_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/source_sans_pro_bold"
                        android:text="4.5"
                        android:textColor="@color/very_dark_blue_black"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl_image_post_small"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_type_post_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bright_blue_stroke_box"
                    android:fontFamily="@font/source_sans_pro_semibold"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="Apartment"
                    android:textAlignment="center"
                    android:textColor="@color/bright_blue"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price_post_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="$1,000"
                        android:textAlignment="center"
                        android:textColor="@color/bright_blue"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tv_period_post_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="/month"
                        android:textAlignment="center"
                        android:textColor="@color/dark_grayish_blue"
                        android:textSize="14sp" />
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_name_post_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="Owent Apartment"
                android:textAlignment="center"
                android:textColor="@color/very_dark_blue_black"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_location_full" />

                    <TextView
                        android:id="@+id/tv_location_post_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/source_sans_pro_semibold"
                        android:text="Surabaya, Indonesia"
                        android:textColor="@color/very_dark_blue_black"
                        android:textSize="13sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_like_post_small"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_heart_outline" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
</androidx.cardview.widget.CardView>