<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".activity.authentication.WelcomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="40dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_il_welcome_cats" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        android:text="@string/let_s_you_in"
        android:textColor="@color/very_dark_blue_black"
        android:textSize="28sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/ll_signin_with_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/light_gray_stroke_box"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="25dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_facebook" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/facebook"
                android:textColor="@color/very_dark_blue_black"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_signin_with_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/light_gray_stroke_box"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="25dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_google" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:text="@string/google"
                android:textColor="@color/very_dark_blue_black"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="@string/or"
            android:textColor="@color/very_dark_blue_black"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_signin_with_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/gradient_solid_rounded"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/sign_in_with_password"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="35dp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/don_t_have_an_account_sign_up"
            android:textColor="@color/very_dark_blue_black"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>