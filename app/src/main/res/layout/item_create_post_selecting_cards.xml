<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_sale_type_post"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/item_cardview_selector"
    app:cardCornerRadius="10dp"
    app:checkedIcon="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/cv_building_type_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginVertical="15dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_building_type_icon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_creat_post_house_unselected" />
        </LinearLayout>

        <TextView
            android:layout_margin="3dp"
            android:id="@+id/tv_building_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/house"
            android:textAlignment="center"
            android:textColor="@color/very_dark_blue_black"
            android:textSize="15sp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>